<Window x:Class="Tome.Project.Windows.NewProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tome.Project.Windows"
        xmlns:viewModels="clr-namespace:Tome.Project.ViewModels"
        xmlns:coreValidation="clr-namespace:Tome.Core.Validation"
        mc:Ignorable="d"
        Title="New Tome Project" Height="110" Width="640" Loaded="OnLoaded"
        d:DataContext="{d:DesignInstance viewModels:NewProjectViewModel}">
	<Grid>
		<Grid.Resources>
			<Style x:Key="TextBoxWithErrorTooltip" TargetType="TextBox">
				<Style.Triggers>
					<Trigger Property="Validation.HasError" Value="true">
						<Setter Property="ToolTip"
						        Value="{Binding RelativeSource={RelativeSource Self},
                        Path=(Validation.Errors)[0].ErrorContent}" />
					</Trigger>
				</Style.Triggers>
			</Style>
		</Grid.Resources>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition />
			<ColumnDefinition Width="150" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0">
			Name:
		</Label>
		<TextBox Grid.Row="0" Grid.Column="1" Name="NameTextBox" Style="{StaticResource TextBoxWithErrorTooltip}">
			<TextBox.Text>
				<Binding Path="Name">
					<Binding.ValidationRules>
						<coreValidation:StringNotEmptyValidationRule />
					</Binding.ValidationRules>
				</Binding>
			</TextBox.Text>
		</TextBox>

		<Label Grid.Row="1" Grid.Column="0">
			Location:
		</Label>
		<TextBox Grid.Row="1" Grid.Column="1" Name="LocationTextBox" Style="{StaticResource TextBoxWithErrorTooltip}">
			<TextBox.Text>
				<Binding Path="Path">
					<Binding.ValidationRules>
						<coreValidation:DirectoryMustExistValidationRule />
					</Binding.ValidationRules>
				</Binding>
			</TextBox.Text>
		</TextBox>
		<Button Grid.Row="1" Grid.Column="2" Click="OnClickBrowseLocation">Browse</Button>

		<Grid Grid.Row="2" Grid.Column="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Click="OnClickCreateProject">OK</Button>
			<Button Grid.Column="1" Click="OnClickCancel">Cancel</Button>
		</Grid>
	</Grid>
</Window>